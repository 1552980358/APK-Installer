<Page
    x:Class="APKInstaller.Pages.SettingsPages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sharpadbclient="using:AdvancedSharpAdbClient"
    xmlns:controls="using:APKInstaller.Controls"
    xmlns:converter="using:APKInstaller.Helpers.ValueConverters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <converter:TrueToFalseConverter x:Key="TrueToFalseConverter"/>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <ScrollViewer Style="{StaticResource PageScrollViewer}">
            <StackPanel
                Padding="16"
                Margin="{StaticResource StackPanelMargin}">
                <controls:SettingsGroup
                    Margin="0,-32,0,0"
                    x:Uid="/SettingsPage/DeviceSettingsHeader">
                    <ListView
                        Margin="-12,0"
                        x:Name="SelectDeviceBox"
                        ItemsSource="{x:Bind DeviceList, Mode=OneWay}"
                        SelectionChanged="SelectDeviceBox_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="sharpadbclient:DeviceData">
                                <controls:Setting
                                    Margin="0,0"
                                    Icon="&#xE8EA;"
                                    Header="{x:Bind Name}"
                                    Description="{x:Bind State}">
                                </controls:Setting>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <controls:Setting
                        Icon="&#xE975;"
                        Header="Is Only for WSA?"
                        Description="Disable it to conncet to other device.">
                        <controls:Setting.ActionContent>
                            <ToggleSwitch
                                IsOn="{x:Bind IsOnlyWSA, Mode=TwoWay}"
                                Style="{StaticResource ToggleSwitchSettingStyle}"/>
                        </controls:Setting.ActionContent>
                    </controls:Setting>
                </controls:SettingsGroup>
                <controls:SettingsGroup
                    Margin="0,-32,0,0"
                    x:Uid="/SettingsPage/OthersSettingsHeader">
                    <controls:Setting
                        Icon="&#xE777;"
                        x:Uid="/SettingsPage/ResetSettings">
                        <controls:Setting.ActionContent>
                            <Button
                                Name="Reset"
                                x:Uid="/SettingsPage/ResetSettingsButton">
                                <Button.Flyout>
                                    <Flyout>
                                        <StackPanel>
                                            <TextBlock
                                                Margin="0,0,0,12"
                                                x:Uid="/SettingsPage/ResetSettingsTitle"
                                                Style="{ThemeResource BaseTextBlockStyle}"/>
                                            <Button
                                                Tag="Reset"
                                                Click="Button_Click"
                                                x:Uid="/SettingsPage/ResetSettingsConfirm"/>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </controls:Setting.ActionContent>
                    </controls:Setting>
                    <controls:SettingButton
                        Tag="TestPage"
                        Click="Button_Click"
                        x:Name="GoToTestPage">
                        <controls:SettingButton.Content>
                            <controls:Setting
                                Icon="&#xEC7A;"
                                x:Uid="/SettingsPage/GoToTestPage">
                                <controls:Setting.ActionContent>
                                    <FontIcon
                                        FontSize="12"
                                        Glyph="&#xE76C;"
                                        Margin="0,12,16,12"
                                        FontFamily="Segoe MDL2 Assets"/>
                                </controls:Setting.ActionContent>
                            </controls:Setting>
                        </controls:SettingButton.Content>
                    </controls:SettingButton>
                </controls:SettingsGroup>
                <controls:SettingsGroup
                    Margin="0,-32,0,0"
                    x:Uid="/SettingsPage/AboutSettingsHeader">
                    <controls:Setting
                        Icon="&#xE117;"
                        Header="{x:Bind VersionTextBlockText}">
                        <controls:Setting.Description>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Style="{StaticResource SecondaryTextStyle}">
                                    <Run Text="Last Checked"/>
                                    <Run Text="{x:Bind UpdateDate, Mode=OneWay}"/>
                                </TextBlock>
                                <StackPanel
                                    Margin="0,2,0,0"
                                    Orientation="Horizontal">
                                    <HyperlinkButton
                                        Tag="FeedBack"
                                        Margin="0,0,2,0"
                                        Click="Button_Click"
                                        x:Uid="/SettingsPage/FeedbackLink"/>
                                    <HyperlinkButton
                                        Margin="2,0"
                                        Content="Release notes"
                                        NavigateUri="https://github.com/Paving-Base/APK-Installer/releases/"/>
                                </StackPanel>
                            </StackPanel>
                        </controls:Setting.Description>
                        <controls:Setting.ActionContent>
                            <StackPanel
                                Spacing="18"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <ProgressRing
                                    Width="24"
                                    Height="24"
                                    Visibility="{x:Bind CheckUpdate, Mode=OneWay}"/>
                                <TextBlock
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"
                                    Text="Checking For Updates"
                                    Visibility="{x:Bind CheckUpdate, Mode=OneWay}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <Button
                                    Tag="Update"
                                    Click="Button_Click"
                                    Content="Check For Updates"
                                    HorizontalAlignment="Right"
                                    Visibility="{x:Bind CheckUpdate, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='!bool'}" />
                            </StackPanel>
                        </controls:Setting.ActionContent>
                    </controls:Setting>
                    <InfoBar
                        IsOpen="True"
                        IsClosable="False"
                        x:Name="UpdateState"
                        Visibility="Collapsed"/>
                </controls:SettingsGroup>
            </StackPanel>
        </ScrollViewer>
        <controls:TitleBar
            x:Name="TitleBar"
            x:Uid="/SettingsPage/TitleBar"
            BackgroundVisibility="Visible"
            BackRequested="TitleBar_BackRequested"
            IsBackEnable="{x:Bind Frame.CanGoBack}"/>
    </Grid>
</Page>
