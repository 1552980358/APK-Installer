<Page
    x:Class="APKInstaller.Pages.SettingsPages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:APKInstaller.Helpers.ValueConverters"
    xmlns:local="using:APKInstaller.Pages.SettingsPages"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:contorls="using:APKInstaller.Controls" xmlns:sharpadbclient="using:AdvancedSharpAdbClient"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <converter:TrueToFalseConverter x:Key="TrueToFalseConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <ScrollViewer Style="{StaticResource PageScrollViewer}">
            <StackPanel
                Padding="16"
                Margin="{StaticResource StackPanelMargin}">
                <contorls:SettingsGroup
                    Margin="0,-32,0,0"
                    x:Uid="/SettingsPage/DeviceSettingsHeader">
                    <ListView
                        Margin="0,2"
                        x:Name="SelectDeviceBox"
                        ItemsSource="{x:Bind DeviceList, Mode=OneWay}"
                        SelectionChanged="SelectDeviceBox_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="sharpadbclient:DeviceData">
                                <contorls:Setting
                                    Margin="-10,0"
                                    Header="{x:Bind Name}"
                                    Description="{x:Bind State}">
                                    <contorls:Setting.Icon>
                                        <SymbolIcon Symbol="CellPhone"/>
                                    </contorls:Setting.Icon>
                                </contorls:Setting>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </contorls:SettingsGroup>
                <contorls:SettingsGroup
                    Header="Options"
                    Margin="0,-32,0,0">
                    <StackPanel>
                        <contorls:Setting
                            Header="Is Only for WSA?"
                            Description="Disable it to conncet to other device.">
                            <contorls:Setting.ActionContent>
                                <ToggleSwitch
                                    IsOn="{x:Bind IsOnlyWSA, Mode=TwoWay}"
                                    Style="{StaticResource ToggleSwitchSettingStyle}"/>
                            </contorls:Setting.ActionContent>
                        </contorls:Setting>
                    </StackPanel>
                </contorls:SettingsGroup>
                <contorls:SettingsGroup
                    Margin="0,-32,0,0"
                    x:Uid="/SettingsPage/OthersSettingsHeader">
                    <StackPanel>
                        <HyperlinkButton
                            Margin="0,2"
                            Tag="FeedBack"
                            Click="Button_Click"
                            x:Uid="/SettingsPage/FeedbackLink"/>
                        <StackPanel
                            Margin="0,2"
                            Orientation="Horizontal">
                            <Button
                                Name="Reset"
                                x:Uid="/SettingsPage/ResetSettings"
                                Style="{StaticResource ButtonRevealStyle}">
                                <Button.Flyout>
                                    <Flyout>
                                        <StackPanel>
                                            <TextBlock
                                            Margin="0,0,0,12"
                                            x:Uid="/SettingsPage/ResetSettingsTitle"
                                            Style="{ThemeResource BaseTextBlockStyle}"/>
                                            <Button
                                            Tag="Reset"
                                            Click="Button_Click"
                                            x:Uid="/SettingsPage/ResetSettingsConfirm"
                                            Style="{StaticResource ButtonRevealStyle}"/>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                            <Button
                                Margin="4,0"
                                Tag="TestPage"
                                Click="Button_Click"
                                x:Name="GoToTestPage"
                                x:Uid="/SettingsPage/GoToTestPage"
                                Style="{StaticResource ButtonRevealStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </contorls:SettingsGroup>
                <contorls:SettingsGroup
                    Margin="0,-32,0,0"
                    x:Uid="/SettingsPage/AboutSettingsHeader">
                    <StackPanel>
                        <contorls:Setting
                            Icon="&#xE117;"
                            Header="{x:Bind VersionTextBlockText}">
                            <contorls:Setting.Description>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Style="{StaticResource SecondaryTextStyle}">
                                    <Run Text="Last Checked" />
                                    <Run Text="2021/09/10" />
                                    </TextBlock>
                                    <HyperlinkButton
                                        Margin="0,2,0,0"
                                        Content="Release notes"
                                        NavigateUri="https://github.com/microsoft/PowerToys/releases/" />
                                </StackPanel>
                            </contorls:Setting.Description>
                            <contorls:Setting.ActionContent>
                                <StackPanel
                                    Spacing="18"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                                    <ProgressRing
                                        Width="24"
                                        Height="24"/>
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        VerticalAlignment="Center"
                                        Text="Checking For Updates"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <Button
                                        Content="Check For Updates"
                                        HorizontalAlignment="Right" />
                                </StackPanel>
                            </contorls:Setting.ActionContent>
                        </contorls:Setting>
                    </StackPanel>
                </contorls:SettingsGroup>
            </StackPanel>
        </ScrollViewer>
        <contorls:TitleBar
            x:Name="TitleBar"
            x:Uid="/SettingsPage/TitleBar"
            BackgroundVisibility="Visible"
            BackRequested="TitleBar_BackRequested"
            IsBackEnable="{x:Bind Frame.CanGoBack}"/>
    </Grid>
</Page>
