<Page
    x:Class="APKInstaller.Pages.SettingsPages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:APKInstaller.Helpers.ValueConverters"
    xmlns:local="using:APKInstaller.Pages.SettingsPages"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:contorls="using:APKInstaller.Controls" xmlns:sharpadbclient="using:AdvancedSharpAdbClient"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <converter:TrueToFalseConverter x:Key="TrueToFalseConverter"/>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <ScrollViewer Style="{StaticResource PageScrollViewer}">
            <StackPanel
                Padding="16"
                Margin="{StaticResource StackPanelMargin}">
                <contorls:SettingsGroup
                    Margin="0,-32,0,0"
                    x:Uid="/SettingsPage/DeviceSettingsHeader">
                    <ListView
                        Margin="-12,0"
                        x:Name="SelectDeviceBox"
                        ItemsSource="{x:Bind DeviceList, Mode=OneWay}"
                        SelectionChanged="SelectDeviceBox_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="sharpadbclient:DeviceData">
                                <contorls:Setting
                                    Margin="0,0"
                                    Icon="&#xE8ea;"
                                    Header="{x:Bind Name}"
                                    Description="{x:Bind State}">
                                </contorls:Setting>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </contorls:SettingsGroup>
                <contorls:SettingsGroup
                    Header="Options"
                    Margin="0,-32,0,0">
                    <StackPanel>
                        <contorls:Setting
                            Icon="&#xE975;"
                            Header="Is Only for WSA?"
                            Description="Disable it to conncet to other device.">
                            <contorls:Setting.ActionContent>
                                <ToggleSwitch
                                    IsOn="{x:Bind IsOnlyWSA, Mode=TwoWay}"
                                    Style="{StaticResource ToggleSwitchSettingStyle}"/>
                            </contorls:Setting.ActionContent>
                        </contorls:Setting>
                    </StackPanel>
                </contorls:SettingsGroup>
                <contorls:SettingsGroup
                    Margin="0,-32,0,0"
                    x:Uid="/SettingsPage/OthersSettingsHeader">
                    <StackPanel>
                        <contorls:Setting
                            Icon="&#xE777;"
                            Header="Reset to Default">
                            <contorls:Setting.ActionContent>
                                <Button
                                    Name="Reset"
                                    x:Uid="/SettingsPage/ResetSettings">
                                    <Button.Flyout>
                                        <Flyout>
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="0,0,0,12"
                                                    x:Uid="/SettingsPage/ResetSettingsTitle"
                                                    Style="{ThemeResource BaseTextBlockStyle}"/>
                                                <Button
                                                    Tag="Reset"
                                                    Click="Button_Click"
                                                    x:Uid="/SettingsPage/ResetSettingsConfirm"/>
                                            </StackPanel>
                                        </Flyout>
                                    </Button.Flyout>
                                </Button>
                            </contorls:Setting.ActionContent>
                        </contorls:Setting>
                        <contorls:Setting
                            Icon="&#xEc7a;"
                            Header="Go to TestPage">
                            <contorls:Setting.ActionContent>
                                <Button
                                    Margin="4,0"
                                    Tag="TestPage"
                                    Click="Button_Click"
                                    x:Name="GoToTestPage"
                                    x:Uid="/SettingsPage/GoToTestPage"/>
                            </contorls:Setting.ActionContent>
                        </contorls:Setting>
                    </StackPanel>
                </contorls:SettingsGroup>
                <contorls:SettingsGroup
                    Margin="0,-32,0,0"
                    x:Uid="/SettingsPage/AboutSettingsHeader">
                    <StackPanel>
                        <contorls:Setting
                            Icon="&#xE117;"
                            Header="{x:Bind VersionTextBlockText}">
                            <contorls:Setting.Description>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Style="{StaticResource SecondaryTextStyle}">
                                    <Run Text="Last Checked" />
                                    <Run Text="2021/09/10" />
                                    </TextBlock>
                                    <StackPanel
                                        Margin="0,2,0,0"
                                        Orientation="Horizontal">
                                        <HyperlinkButton
                                            Tag="FeedBack"
                                            Margin="0,0,2,0"
                                            Click="Button_Click"
                                            x:Uid="/SettingsPage/FeedbackLink"/>
                                        <HyperlinkButton
                                            Margin="2,0"
                                            Content="Release notes"
                                            NavigateUri="https://github.com/Paving-Base/APK-Installer/releases/"/>
                                    </StackPanel>
                                </StackPanel>
                            </contorls:Setting.Description>
                            <contorls:Setting.ActionContent>
                                <StackPanel
                                    Spacing="18"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                                    <ProgressRing
                                        Width="24"
                                        Height="24"
                                        Visibility="{x:Bind CheckUpdate, Mode=OneWay}"/>
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        VerticalAlignment="Center"
                                        Text="Checking For Updates"
                                        Visibility="{x:Bind CheckUpdate, Mode=OneWay}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <Button
                                        Tag="Update"
                                        Click="Button_Click"
                                        Content="Check For Updates"
                                        HorizontalAlignment="Right"
                                        Visibility="{x:Bind CheckUpdate, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='!bool'}" />
                                </StackPanel>
                            </contorls:Setting.ActionContent>
                        </contorls:Setting>
                        <InfoBar
                            IsOpen="True"
                            IsClosable="False"
                            x:Name="UpdateState"
                            Visibility="Collapsed"/>
                    </StackPanel>
                </contorls:SettingsGroup>
            </StackPanel>
        </ScrollViewer>
        <contorls:TitleBar
            x:Name="TitleBar"
            x:Uid="/SettingsPage/TitleBar"
            BackgroundVisibility="Visible"
            BackRequested="TitleBar_BackRequested"
            IsBackEnable="{x:Bind Frame.CanGoBack}"/>
    </Grid>
</Page>
